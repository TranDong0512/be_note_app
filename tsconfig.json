{
  "compilerOptions": {
    "module": "commonjs",

    "declaration": true,

    "esModuleInterop": true,

    "removeComments": true,

    "emitDecoratorMetadata": true,

    "experimentalDecorators": true,

    "target": "es2017",

    "sourceMap": true,

    "outDir": "./dist",

    "baseUrl": "./",

    "incremental": true,

    "skipLibCheck": true,

    "noUnusedParameters": false,

    "noUnusedLocals": false,

    "typeRoots": ["./node_modules/@types", "./src/types"]
  },

  "exclude": ["node_modules", "dist"]
}
